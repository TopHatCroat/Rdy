<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:background">@color/primary</item>
        <item name="android:toolbarStyle">@color/primary_dark</item>
        <item name="android:navigationBarColor">@color/primary</item>
        <item name="android:statusBarColor">@color/primary</item>
    </style>

    <style name="app_theme_no_toolbar" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:background">@color/primary</item>
        <item name="android:navigationBarColor">@color/primary</item>
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:windowNoTitle">true</item>
    </style>




    <style name="buttons_style">
        <item name="android:background">@color/accent</item>
        <item name="android:textColor">@color/white_text</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="normal_text">
        <item name="android:textColor">@color/white_text</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="large_text">
        <item name="android:textColor">@color/white_text</item>
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <style name="small_text">
        <item name="android:textColor">@color/white_text</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

</resources>
